function gac() {
	git clone $1
	DIR=`echo $1 | cut -d'/' -f 2 | cut -d '.' -f 1`
	echo "cd $DIR"
	cd $DIR
	if [[ $1 =~ git@github.com:apiaryio ]]; then
		git config user.name "Ladislav Prskavec"
		git config user.email "ladislav@apiary.io"
	fi
}

