# Set PATH, CDPATH, EDITOR, etc.
SYSTEM=`uname`
# Detect arch (using m1 apple and i386 macs)
ARCH=`uname -m`

if [[ $SYSTEM == *Linux* ]]
then
  export EDITOR='vim'
  export GDK_NATIVE_WINDOWS=true
else
  export EDITOR='code'
fi
# PATH
export PATH=~/.local/bin:~/bin/dotfiles/bin:~/bin:/opt/homebrew/opt/libpq/bin:$PATH
# export PYTHONPATH=/usr/local/lib/python:$PYTHONPATH

export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'
export KUBE_EDITOR=vim

# https://gist.github.com/vsouza/77e6b20520d07652ed7d
export GOPATH=$HOME/go
if [[ $ARCH == "arm64" ]]; then
  export GOROOT=/opt/homebrew/opt/go/libexec
else
  export GOROOT=/usr/local/opt/go/libexec
fi
export GOPROXY=https://proxy.golang.org,direct
export GOPRIVATE=*.oraclecorp.com
export PATH=$PATH:$GOPATH/bin:$GOROOT/bin

keybase fs read /keybase/private/abtris/env > /tmp/env
source "/tmp/env" && rm /tmp/env

# https://github.com/nvbn/thefuck
eval $(thefuck --alias)

# https://github.com/cantino/mcfly
eval "$(mcfly init zsh)"

# Git fuzzy git clone https://github.com/bigH/git-fuzzy.git
export PATH=~/bin/git-fuzzy/bin:$PATH

export TELEPORT_AUTH=PB_Okta
export TELEPORT_PROXY=productboard.teleport.sh
export TELEPORT_USER=ladislav.prskavec@productboard.com

export STARSHIP_CONFIG=~/bin/dotfiles/starship.toml
eval "$(starship init zsh)"
