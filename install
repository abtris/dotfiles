# INSTALL
sudo apt-get install mc vim zsh mercurial
# make symlinks
ln -s ~/bin/dotfiles/bashrc ~/.bashrc
ln -s ~/bin/dotfiles/zshrc ~/.zshrc
# make dir (default not exists)
mkdir ~/.ssh
ln -s ~/bin/dotfiles/ssh/config ~/.ssh/config
ln -s ~/bin/dotfiles/SciTEUser.properties ~/.SciTEUser.properties
ln -s ~/bin/dotfiles/git/.gitconfig ~/.gitconfig
ls -s ~/bin/dotfiles/.vim ~/.vim
ls -s ~/bin/dotfiles/.conky ~/.conky
ls -s ~/bin/dotfiles/.conkyrc ~/.conkyrc
ls -s ~/bin/dotfiles/.vimrc ~/.vimrc
ls -s ~/bin/dotfiles/.vimpluginrc ~/.vimpluginrc
ls -s ~/bin/dotfiles/.nanorc ~/.nanorc
sudo rm /etc/hosts
sudo ln -s ~/bin/dotfiles/hosts/hosts /etc/hosts
# gnome terminal profile:
ls -s ~/bin/dotfiles/gnome-terminal/Profile0 ~/.gconf/apps/gnome-terminal/profiles
# change shell
csh -s /bin/zsh
# install vcpprompt
sh ~/bin/dotfiles/bin/vcprompt-install
# reload configuration and run zsh
source ~/.zshrc
zsh
