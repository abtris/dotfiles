[user]
	name = Ladislav Prskavec
	email = ladislav.prskavec@gmail.com
[rerere]
	enabled = 1
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
	lg = log -p
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    changes=diff --name-status -r
    diffstat=diff --stat -r
    upstream = log --oneline master --not origin/master
	pending = log --oneline origin/master --not master	
    myworklog = log --author=Ladislav --since=1.month --pretty='%h %Cgreen%ad %Cred%an %Cblue%s%Creset'
	worklog = log --pretty='%h %Cgreen%ad %Cred%an %Cblue%s%Creset'
	worklogexport = log --pretty='%h|%at|%an|%s'
	up = pull --rebase
	wu = log --stat origin..@{0}
	wup = log -p origin..@{0}
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan        
[diff "doc"]
	textconv = antiword
[giggle]
	compact-mode = true
	main-window-maximized = true
	main-window-geometry = 1100x892+392+119
[diff]
#	external = ~/bin/dotfiles/bin/diffmeld
#	external = ~/bin/dotfiles/bin/gitdiff
#   external = /home/prskavecl/bin/dotfiles/bin/diffuse
[core]
	excludesfile = /Users/prskavecl/.gitignore
	quotepath = false
[instaweb]
	httpd=webrick
[url "https://github.com/abtris/"]
	insteadOf = "gh:"
[url "ssh://git@git.int.lmc.cz/"]
	insteadOf = "lmc:"
[receive]
	denyNonFastForwards = true
[push]
	default = matching
