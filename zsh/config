autoload -U compinit
compinit
autoload -U colors
colors

# matches case insensitive for lowercase
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'

# pasting with tabs doesn't perform completion
zstyle ':completion:*' insert-tab pending


#PROMPT='
#%{\e[0;32m%}%n{%{\e[0m%}@%M:%~ %{$fg_bold[black]%}$(vcprompt.py)
#→ %{$reset_color%}'

if [[ `whoami` = root ]] then
# root prompt
PROMPT=$'%{\e[0;31m%}%n@%m:%{\e[0m%}%~ %{$fg_bold[black]%}$(vcprompt.py)
→ %{\e[0m%}%'
else
# user prompt
PROMPT=$'%{\e[0m%}%n@%m:%{\e[0m%}%~ %{$fg_bold[black]%}$(vcprompt.py)
→ %{\e[0m%}%'
fi


