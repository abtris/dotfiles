#!/bin/sh

git filter-branch --env-filter '

an="$GIT_AUTHOR_NAME"
am="$GIT_AUTHOR_EMAIL"
cn="$GIT_COMMITTER_NAME"
cm="$GIT_COMMITTER_EMAIL"

if [ "$GIT_COMMITTER_EMAIL" = "ladislav@prskavec.net" ]
then
    cn="Ladislav Prskavec"
    cm="ladislav.prskavec@lmc.eu"
fi
if [ "$GIT_AUTHOR_EMAIL" = "ladislav@prskavec.net" ]
then
    an="Ladislav Prskavec"
    am="ladislav.prskavec@lmc.eu"
fi

export GIT_AUTHOR_NAME="$an"
export GIT_AUTHOR_EMAIL="$am"
export GIT_COMMITTER_NAME="$cn"
export GIT_COMMITTER_EMAIL="$cm"
'